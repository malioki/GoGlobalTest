@model WebAppGoGlobal.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_WelcomeLayout.cshtml";
}

<div class="bd-example">
    <div class="welcome-title">
        <img style="max-width: 200px;" src="~/github.png" alt="GitHub Repositories"/>
        <h2 style="max-width: 200px;">Enter on site</h2>
    </div>
 
    <form asp-controller="Account" asp-action="Login"  asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="login-form">
            <div class="row mb-3">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="Enter your e-mail..." />
                    <span asp-validation-for="Email" />
                </div>
            </div>

             <div class="row mb-3">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password" id="Password" placeholder="Enter your password..." />
                    <span asp-validation-for="Password"/>
                </div>
            </div>
            <div class="form-group d-md-flex justify-content-md-end">
                <input type="submit" value="Sign In" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>