@model WebAppGoGlobal.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_WelcomeLayout.cshtml";
}

<div class="bd-example">
    <div class="welcome-title">
        <img style="max-width: 250px;" src="~/github.png" alt="GitHub Repositories"/>
        <h2 style="max-width: 250px;">User Registration</h2>
    </div>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="row mb-3">
                <label asp-for="Email" class="col-sm-3 col-form-label">Email address</label><br />
                <div class="col-sm-9">
                    <input class="form-control" type="email" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Password" class="col-sm-3 col-form-label">Password</label><br />
                <div class="col-sm-9">
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ConfirmPassword" class="col-sm-3 col-form-label">Confirm Password</label><br />
                <div class="col-sm-9">
                    <input class="form-control" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
            </div>
            <div class="form-group d-md-flex justify-content-md-end">
                <input type="submit" value="Register" class="btn btn-outline-dark"  />
            </div>
        </div>
    </form>
</div>
